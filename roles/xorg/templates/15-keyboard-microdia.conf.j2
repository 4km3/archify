{{ ansible_managed | comment }}
Section "InputClass"
  Identifier	"Microdia"

  MatchProduct		"      USB Keyboard"
# MatchVendor		"Microdia"
  MatchDevicePath	"/dev/input/event*"
  MatchDriver		"libinput"
  MatchIsKeyboard	"on"

  Option	"XkbLayout"	"es"
  Option	"XkbOptions"	"caps:capslock,ctrl:aa_ctrl"
EndSection
